<Window x:Class="capa_wpf.PantFollowTodos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capa_wpf"
        mc:Ignorable="d"
        Title="Todos mis Followers" Height="700" Width="1024"
        ResizeMode="NoResize" Icon="twitter.png">
    <Grid>
        <!-- Definición Columnas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Definición Filas-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2"
            x:Name="groupBox2" Header="Lista de Seguidores" Height="278" Width="1024">

            <!-- DataGrid con un Databinding a una coleccion // SelectionChanged: Evento que se produce cuando hay un cambio en una selección-->
            <DataGrid x:Name="gridSeguidores" ItemsSource="{Binding}" SelectionChanged="nombreMetodo" SelectionMode="Single"/>
            <!-- Margin="10,10,17,9"/> -->
        </GroupBox>
    </Grid>
</Window>
